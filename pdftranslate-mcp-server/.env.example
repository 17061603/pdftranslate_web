# PDF翻译MCP服务器环境配置文件
# 复制此文件为 .env 并填入实际的配置值

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=deepseek-ai/DeepSeek-V3
OPENAI_BASE_URL=https://api.siliconflow.cn/v1

# 翻译默认配置
DEFAULT_LANG_IN=en
DEFAULT_LANG_OUT=zh
QPS=4
WATERMARK_OUTPUT_MODE=no_watermark
NO_DUAL=false
NO_MONO=false

# MCP服务器配置
MCP_HOST=0.0.0.0
MCP_PORT=8003

# 日志配置
LOG_LEVEL=INFO